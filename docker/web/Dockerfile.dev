FROM node:20-alpine

WORKDIR /app

# 启用 corepack 以使用 pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# 复制 package 文件和锁文件
COPY package.json pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制源代码（会被 volume 覆盖）
COPY . .

# 暴露端口
EXPOSE 4000

# 启动开发服务器
CMD ["pnpm", "run", "dev"]

